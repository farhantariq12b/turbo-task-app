{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,               
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "app",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "app"
  ],
  "exclude": [
    "jest.config.js"
  ]
}